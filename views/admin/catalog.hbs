<main>

    {{#if hasMovies}}

    <h1>Movie Catalog</h1>

    <div class="row">
        {{#each movs}}

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.genre}}</h6>
                    <p class="card-text">{{this.description}}</p>
                    <h6 class="card-subtitle mb-2 text-muted">{{this.status}}</h6>
                    <a href="edit-movie/{{this.id}}?edit=true" class="btn btn-primary">Edit</a>

                    <form action="/admin/delete-movie" method="post">

                        <input type="hidden" name="MovieID" value="{{this.id}}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
{{else}}

    <h1>No movies found!</h1>

{{/if}}

</main>