<main>

    <div class="card">
        <div class="card-header">
            Movie Form
        </div>
        <div class="card-body">

        <form method="POST" action="{{#if editMode}}/admin/edit-movie{{else}}/admin/add-movie{{/if}}">
        <div class="mb-3">
          <label for="title" class="form-label">Title:</label>
          <input type="text" class="form-control" id="title" name="Title" value="{{#if editMode}}{{movie.title}}{{/if}}"/>

        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description:</label>
          <textarea name="Description" id="description" cols="50" rows="2">{{#if editMode}}{{movie.description}}{{/if}}</textarea>
        </div>

        {{#if editMode}}
        
        <div class="mb-3">
          <label for="status" class="form-label">Status:</label>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Active" checked>
            <label class="form-check-label" for="inlineRadio1">Active</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Inactive">
            <label class="form-check-label" for="inlineRadio2">Inactive</label>
          </div>
        </div>

        {{/if}}

        <div class="mb-3">
          <label for="genre" class="form-label">Genre:</label>
          <select class="form-select" aria-label="Genre" id="genre" name="Genre">
            <option selected>{{#if editMode}}{{movie.genre}}{{else}}Select the movie genre...{{/if}}</option>
            <option value="Action">Action</option>
            <option value="Comedy">Comedy</option>
            <option value="Documental">Documental</option>
            <option value="Horror">Horror</option>
            <option value="Thriller">Thriller</option>
          </select>
        </div>

        {{#if editMode}}

          <input type="hidden" name="MovieID" value="{{movie.id}}">

        {{/if}}

        <button type="submit" class="btn btn-primary">{{#if editMode}}Update{{else}}Add{{/if}}</button>
      </form>

    </div>
  </div>
</main>